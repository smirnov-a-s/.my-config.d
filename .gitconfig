[alias]
	co      = checkout
	ci      = commit
	cl      = clean
	st      = status
	br      = branch
	pr	= pull --rebase
  	last    = log -1 HEAD
  	olog    = log --oneline --abbrev-commit --decorate=short
	unstage = reset HEAD --
  	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  	type    = cat-file -t
  	dump    = cat-file -p

[user]
	name = Anton Smirnov
	email = a.fin.smirnov@gmail.com

[mirror]
	summary = true

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow bold
  	local = yellow
  	remote = green
[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
  	added = yellow
  	changed = green
  	untracked = cyan
[merge]
	summary = true
[push]
	default = tracking
[format]
   	numbered = auto
   	cc = a.fin.smirnov@gmail.com
[rerere]
	enabled = 1
[core]
	quotepath = false
	autocrlf = false
	safecrlf = true
	excludesfile = /home/anton/.my-config.d/.gitignore
  	# For windows use:
	# autocrlf = true

[credential]
	helper = cache
